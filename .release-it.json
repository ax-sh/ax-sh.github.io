{
  "hooks": {
    "before:beforeBump": ["echo beforeBump v${version}"],
    "after:bump": ["echo after:bump v${version} v${latestVersion} "],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "push": false
  },
  "github": {
    "release": false
  },

  "npm": {
    "publish": false
  }
}
