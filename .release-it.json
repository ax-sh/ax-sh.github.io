{
  "hooks": {
    "init": "pnpm test",
    "before:beforeBump": ["git flow release start v${version}"],
    "after:bump": [ "pnpx auto-changelog -p", "git add CHANGELOG.md", "echo \uD83D\uDC4A after:bump v${version} v${latestVersion} "],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "push": false,
    "changelog": "pnpx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs"
  },
  "github": {
    "release": false
  },

  "npm": {
    "publish": false
  }
}
